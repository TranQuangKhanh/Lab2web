{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "../dist",
    "rootDir": "../src/src",

    /* ---- JSX Runtime ---- */
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",

    /* ---- TypeScript Rules ---- */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "ignoreDeprecations": "6.0"
  },
  "include": ["../src/src/**/*"],
  "exclude": ["node_modules", "../dist"]
}
